rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // VerseVault: per-user library (recent + favorites). App uses Clerk, not Firebase Auth,
    // so request.auth is null. Allow read/write to users/{userId} so the client can persist data.
    // For production, consider a backend that verifies Clerk JWT and uses Admin SDK.
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
